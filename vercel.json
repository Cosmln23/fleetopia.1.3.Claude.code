{
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "fleetopia.co"
        }
      ],
      "destination": "https://www.fleetopia.co/$1",
      "permanent": true
    }
  ]
} 